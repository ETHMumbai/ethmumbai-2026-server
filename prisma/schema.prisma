generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// =======================
// Tickets Table
// =======================
model Ticket {
  id       Int      @id @default(autoincrement())
  title    String   @unique
  type     String   // "earlybird" or "standard"
  fiat     Float   @default(999)
  crypto   Float   @default(12)
  quantity Int
  orders   Order[]
}

//
// =======================
// Order Table
// =======================
model Order {
  id                 Int          @id @default(autoincrement())

  // Razorpay fields
  razorpayOrderId    String?      // Razorpay: order_id
  razorpayPaymentId  String?      // Razorpay: payment_id

  // Daimo fields
  daimoPaymentId     String?      // Daimo: payId
  daimoTxHash        String?      // Daimo: blockchain transaction hash

  // Common order info
  ticketId           Int
  buyerName          String
  buyerEmail         String
  buyerPhone         String
  amount             Float
  currency           String       @default("INR") // INR or CRYPTO (USDC)
  status             String       @default("created") // created, attempted, paid, failed
  paymentType        PaymentType?
  paymentVerified    Boolean       @default(false)

  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  // Relations
  ticket             Ticket        @relation(fields: [ticketId], references: [id])
  participants       Participant[]
}

//
// =======================
// Participant Table
// =======================
model Participant {
  id        Int      @id @default(autoincrement())
  orderId   Int
  name      String
  email     String?
  isBuyer   Boolean  @default(false) // true if this participant is the buyer
  order     Order    @relation(fields: [orderId], references: [id])
}

//
// =======================
// Payment Type Enum
// =======================
enum PaymentType {
  RAZORPAY
  DAIMO
}
